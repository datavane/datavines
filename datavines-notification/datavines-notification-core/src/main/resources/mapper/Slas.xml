<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="io.datavines.notification.core.mapper.SlasMapper">

    <select id="listSlas" resultType="io.datavines.notification.core.dto.vo.SlasVo" parameterType="java.lang.Long">
        SELECT slas.id,
            slas.name,
            slasjroup.jobs,
            du.username AS creator,
            slas.update_time
            FROM dv_slas slas
        LEFT JOIN
            (SELECT slas_id,
            count(job_id) AS jobs
            FROM dv_slas_job
            WHERE work_space_id = ${workSpaceId}
                GROUP BY  slas_id
            )slasjroup
        ON slas .id = slasjroup .slas_id
        LEFT JOIN
            dv_user du
        ON slas.update_by = du.id
    </select>

</mapper>